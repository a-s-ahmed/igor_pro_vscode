{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Igor Pro",
    
    "foldingStartMarker": "^\b*(?i:function|for|if|switch|strswitch|do|try|menu|submenu|window|macro)\b",
    "foldingStopMarker": "^\b*(?i:end|endfor|endif|endswitch|while|endtry|endmacro)\b",
    
    "patterns": [
		{
			"include": "#keywords"
		}
		
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.igorpro",
                    "match": "\\b(if|endif|Function|End|while|for|return)\\b"
                }
            ]
        }
    },
    //test
    "scopeName": "source.ipf"
}